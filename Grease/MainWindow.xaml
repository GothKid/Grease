<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Grease.MainWindow"
        Title="Grease" Height="136" Width="283" Icon="/Grease;component/Images/Grease.png">
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="White" Offset="0"/>
			<GradientStop Color="White" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>
    <Grid>
        <Label Content="Grease" Height="39" HorizontalAlignment="Left" x:Name="GreaseTitle" VerticalAlignment="Top" FontFamily="SketchFlow Print" FontSize="25" FontWeight="Bold" Width="105" />
        <Button Content="&gt;" Height="25" HorizontalAlignment="Left" Margin="5,63,0,0" x:Name="btnPlay" VerticalAlignment="Top" Width="25" Click="btnPlay_Click" d:LayoutOverrides="VerticalAlignment" Background="{x:Null}" BorderThickness="0" />
        <Button Content="||" Height="25" HorizontalAlignment="Left" Margin="35,63,0,0" x:Name="btnPause" VerticalAlignment="Top" Width="25" Click="btnPause_Click" d:LayoutOverrides="HorizontalAlignment, VerticalAlignment" BorderThickness="0" Background="{x:Null}" />
        <Button Content="&gt;&gt;" Height="25" HorizontalAlignment="Left" Margin="66,63,0,0" x:Name="btnNext" VerticalAlignment="Top" Width="25" Click="btnNext_Click" d:LayoutOverrides="HorizontalAlignment, VerticalAlignment" Background="{x:Null}" BorderThickness="0" />
        <Label Content="No Songs Playing" Height="28" Margin="2,35,13.172,0" x:Name="lblCurrentlyPlaying" VerticalAlignment="Top" />
        <Button Content="..." HorizontalAlignment="Left" x:Name="btnChooseDirectory" Width="15" Click="btnChooseDirectory_Click" BorderThickness="0" Background="{x:Null}" Margin="107,6,0,68" BorderBrush="{x:Null}" />
        <Label Content="No Mp3's to Play"  x:Name="lblSongCount" Background="{x:Null}" Margin="126.172,5,0,0" HorizontalAlignment="Left" Width="127.656" Height="25" VerticalAlignment="Top" />
        <MediaElement Height="10" HorizontalAlignment="Left" Margin="245,11,0,0" x:Name="Player" VerticalAlignment="Top" Width="10" LoadedBehavior="Manual" MediaEnded="CompletedSong" />
    </Grid>
</Window>
